    <form action="/admin/compose" method="post" class="mt-4">

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="composeTitle" value="<%= locals.blog_title%>">
        </div>

        <div class="mb-3">
            <label for="post" class="form-label">Post</label>
            <textarea class="form-control" id="post" rows="4" name="composePost">
             <%= locals.blog_content %> 
            </textarea>
          </div>
        
        <button type="submit" class="btn btn-primary">Publish</button>
      </form>
    <%- include('partials/footer'); -%>